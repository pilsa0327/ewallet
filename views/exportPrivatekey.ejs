<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="/css/style.css">

  <script src="http://code.jquery.com/jquery-latest.js"></script>
  <title> Wallet</title>
</head>

<body>
  <div class="container">
    <header>
      <h2>개인키 내보내기</h2>
    </header>

    <section class="content">
      <nav>
        <img class="logo" src="/images/ether_logo.png">
      </nav>
      <main class="mainPage">
        <div class="context">
          <div class="item" id="text">userID</div>
          <div class="item"><input class="input_text" type="text" size="40" id="userID"></div>
          <div class="item" id="text">Password</div>
          <div class="item"><input class="input_text" type="password" size="44" id="password" style="font-family:''"></div>
          <div class="div5"><input type="submit" value="Submit" id="getResult"></button></div>
        </div>
      </main>
    </section>

    <footer>
      <button type="button" id="btn2">뒤로가기</button>
    </footer>
    <script>
      $(document).ready(() => {
        $('#getResult').click(function () {
          $.ajax({
            url: 'http://localhost:3000/privatekey/export',
            dataType: 'json',
            type: 'POST',
            data: {
              'id': $('#userID').val(),
              'password': $('#password').val(),
            },
            success: function (result, body, { status }) {
                console.log(result.privatekey)
              if (status === 200) {
                alert("아이디 및 비밀번호를 다시 확인해주세요.")
              } else if (status === 201) {
                alert("ㅎ?")
              }
            
            },
            error: function (request, status, error) {
            alert("code:" + request.status + "\n" + "message:" + request.responseText + "\n" + "error:" + error);
          }
          });
        })
      })

      $('#btn2').click(function () {
        window.location.href = "http://localhost:3000/main"
      })
    </script>

  </div>
</body>

</html>